{% include 'head.twig' %}


<title>Create your portfolio</title>
</head>
<script src='{{"public/js/signup.js"}}'></script>
<body>
<main class="main">

    <h1 class="offset-lg-3 col-lg-6 offset-lg-3 offset-sm-2 col-sm-8 offset-sm-2">Create your portfolio!</h1>
    <p id="explanation" class="offset-lg-2 col-lg-8 offset-lg-2 offset-sm-1 col-sm-10 offset-sm-1">
        Join us and manage all your cryptocurrencies.
    </p>

    <div>
        <form class="register" id="register" name="register" method="post" action='login/newuser.php'>
            <fieldset class="name">
                <div class="col-sm-6 form-group">
                    <label>FIRST NAME</label>
                    <input type="text" name="username" placeholder="YOUR FIRST NAME" class="form-control">
                    <span class="highlight"></span>
                    <span class="bar"></span>
                </div>
            </fieldset>
            <fieldset class="email">
                <label>EMAIL ADDRESS</label>
                <input type="text" name="email" id="email" placeholder="YOUR EMAIL ADDRESS" class="form-control">
                <span class="highlight"></span>
                <span class="bar"></span>
            </fieldset>
            <fieldset class="password">
                <label>PASSWORD</label>
                <input type="password" name="password" id="password" placeholder="YOUR PASSWORD" class="form-control">
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>CONFIRM PASSWORD</label>
                <input type="password" name="confirmPassword" id="confirmPassword" placeholder="CONFIRM YOUR PASSWORD" class="form-control">
                <span class="highlight"></span>
                <span class="bar"></span>
            </fieldset>
            <button class="up" class=create" type="submit" name="submit" id="submit">CREATE MY PORTFOLIO</button>
        </form>
        <a href="index.php" class="link">ALREADY HAVE A PORTFOLIO?</a>
    </div>
</main>

<script src="http://jqueryvalidation.org/files/dist/jquery.validate.min.js"></script>
<script src="http://jqueryvalidation.org/files/dist/additional-methods.min.js"></script>
<script>

    $( "#register" ).validate({
        rules: {
            email: {
                email: true,
                required: true
            },
            password1: {
                required: true,
                minlength: 4
            },
            confirmPassword: {
                equalTo: "#password"
            }
        }
    });
</script>
</body>